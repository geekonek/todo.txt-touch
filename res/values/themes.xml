<resources>
	
	<style name="TodoTheme" parent="android:Theme">
	
	</style>
		
	<style name="TodoTheme.WHITE" parent="TodoTheme">
		<item name="android:textColor">#000000</item>
		<item name="android:divider">#DBE9FF</item>
		<item name="android:footerDividersEnabled">true</item>
		<item name="android:dividerHeight">1px</item>
		<item name="android:cacheColorHint">#FFFFFF</item>
		<item name="android:shadowColor">@color/black</item>
		<item name="titleBar">@style/TitleBarWhite</item>
		<item name="titleBarActionStyle">@style/TitleBarAction</item>
		
		
		<!-- Task list colors -->
		<item name="taskTextColor">@color/black</item>
		<item name="taskPriorityAColor">@color/green</item>
		<item name="taskPriorityBColor">@color/blue</item>
		<item name="taskPriorityCColor">@color/orange</item>
		<item name="taskPriorityDColor">@color/gold</item>
		<item name="taskPriorityDefaultColor">@color/black</item>
		<item name="taskContextColor">@color/grey</item>
		<item name="taskProjectColor">@color/grey</item>
		
	</style>
	
	<style name="TodoTheme.BLACK" parent="TodoTheme">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">#000000</item>
		<item name="android:divider">#DBE9FF</item>
		<item name="android:footerDividersEnabled">true</item>
		<item name="android:dividerHeight">1px</item>
		<item name="android:cacheColorHint">#000000</item>
		<item name="titleBar">@style/TitleBarBlack</item>
		<item name="titleBarActionStyle">@style/TitleBarActionBlack</item>
		<item name="taskId">@style/TaskIdStyle</item>
		
		<!-- Task list colors -->
		<item name="taskTextColor">@color/white</item>
		<item name="taskPriorityAColor">@color/green</item>
		<item name="taskPriorityBColor">@color/blue</item>
		<item name="taskPriorityCColor">@color/orange</item>
		<item name="taskPriorityDColor">@color/gold</item>
		<item name="taskPriorityDefaultColor">@color/black</item>
		<item name="taskContextColor">@color/grey</item>
		<item name="taskProjectColor">@color/grey</item>
		
	</style>
	
</resources>